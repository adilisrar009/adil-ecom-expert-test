<style>
  .product-section {
    width: 100%;
    background-color: #ffffff;
    padding: 56px 16.72px 23.74px;
    font-family: 'Jost'
    , sans-serif;
  }

  .heading-font {
    font-family: 'Lustria'
    , serif;
  }

  .body-font {
    font-family: 'Jost'
    , sans-serif;
  }

  .section-wrapper {
    margin: 0 auto;
    max-width: 1440px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  .section-title {
    width: 100%;
    margin: 0;
    font-weight: 400;
    font-size: 24px;
    line-height: 1.2;
    color: #000000;
    text-align: center;
  }

  .product-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    justify-content: flex-start;
    width: 100%;
  }

  .product-item {
    position: relative;
    flex: 0 0 calc(50% - 2px);
    overflow: hidden;
    aspect-ratio: 169 / 186;
  }

  .product-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .plus-btn {
    position: absolute;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 15.71px;
    height: 15.71px;
  }

  .plus-btn svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .empty-box {
    width: 100%;
    aspect-ratio: 1 / 1;
    background: #ffffff;
    border: 1px solid #eeeeee;
  }

  @media (max-width: 767px) {
    .plus-btn {
      top: var(--mobile-top) !important;
      left: var(--mobile-left) !important;
      right: auto !important;
      transform: none !important;
    }
  }

  @media (min-width: 1024px) {
    .product-section {
      padding: 68px 49.5px 51.5px 51.5px;
    }

    .section-title {
      text-align: left;
      font-size: 36px;
    }

    .product-grid {
      gap: 20px;
    }

    .product-item {
      flex: 1 1 calc(33.333% - 14px);
      min-width: 300px;
      height: 444px;
      aspect-ratio: auto;
    }

    .plus-btn {
      top: var(--desktop-top) !important;
      left: var(--desktop-left) !important;
      width: 22px;
      height: 22px;
    }

    .plus-btn:hover {
      transform: scale(1.2);
    }
  }

  .modal-overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    background-color: rgba(0, 0, 0, 0.1);
    display: none;
    align-items: center;
    justify-content: center;
  }

  .modal-overlay.show {
    display: flex;
  }

  .modal-box {
    background-color: #ffffff;
    width: 311px;
    height: 447px;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.20);
    position: relative;
    overflow: hidden;
  }

  .close-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 50;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .modal-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 310px;
    height: 450px;
  }

  .modal-image {
    position: absolute;
    width: 120px;
    height: 140px;
    object-fit: cover;
    top: 36.42px;
    left: 17px;
  }

  .modal-title {
    position: absolute;
    top: 39px;
    left: 145px;
    width: 136px;
    height: 38px;
    font-size: 16px;
    font-weight: 300;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .modal-price {
    position: absolute;
    top: 88px;
    left: 145px;
    font-size: 16px;
    margin: 0;
  }

  .modal-description {
    position: absolute;
    top: 119px;
    left: 145px;
    width: 146px;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.1;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
  }

  .options-box {
    position: absolute;
    top: 186px;
    left: 20px;
    width: 271px;
  }

  .option-label {
    font-family: 'Jost'
    , sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #333333;
    margin: 0 0 6px;
  }

  .color-options {
    display: flex;
    width: 271px;
    height: 40.44px;
    border: 0.5px solid #000000;
    box-sizing: border-box;
    align-items: center;
    overflow: hidden;
    background: #FFFFFF;
  }

  .color-box {
    flex: 1;
    display: flex;
    align-items: center;
    height: 100%;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .color-box.active {
    background-color: rgba(0, 0, 0, 1) !important;
  }

  .color-box.active .color-name {
    color: #ffffff !important;
  }

  .color-swatch {
    width: 5.81px;
    height: 40.44px;
    border: 0.5px solid #000000;
    box-sizing: border-box;
    flex-shrink: 0;
  }

  .color-name {
    font-family: 'Jost'
    , sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: -0.02em;
    text-transform: capitalize;
    padding-left: 15px;
    color: #000000;
    display: flex;
    align-items: center;
  }

  .size-dropdown {
    width: 271px;
    height: 40.44px;
    border: 1px solid #000000;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    margin-top: 6px;
    cursor: pointer;
    background: #FFFFFF;
    position: relative;
  }

  .selected-size {
    flex: 1;
    font-family: 'Jost'
    , sans-serif;
    font-size: 16px;
    font-weight: 400;
    padding-left: 15px;
  }

  .divider {
    width: 0.5px;
    height: 40.44px;
    background-color: #000000;
  }

  .dropdown-arrow {
    width: 39.73px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .size-list {
    position: absolute;
    top: 100%;
    left: -1px;
    max-height: 120px;
    width: 271px;
    background: #ffffff;
    border: 1px solid #000000;
    border-top: none;
    z-index: 1000;
    display: none;
    overflow-y: auto;
    scrollbar-width: none;
  }

  .size-list::-webkit-scrollbar {
    display: none;
  }

  .size-option {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40px;
    font-family: 'Jost'
    , sans-serif;
    font-size: 16px;
    cursor: pointer;
  }

  .size-option:hover {
    background-color: #000000 !important;
    color: #ffffff !important;
  }

  .size-dropdown.open .size-list {
    display: block;
  }

  .size-dropdown.open .dropdown-arrow svg {
    transform: rotate(180deg);
  }

  .cart-btn {
    position: absolute;
    bottom: 25px;
    left: 20px;
    min-height: 45px;
    min-width: 271px;
    background-color: #000;
    color: #fff;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
    font-family: 'Jost'
    , sans-serif;
  }

  .cart-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .cart-btn p {
    text-transform: uppercase;
    font-size: 16px;
    margin: 0;
  }

  .cart-btn.loading p {
    opacity: 0.7;
  }
</style>

<section class="product-section">
  <div class="section-wrapper">
    {%- if section.settings.heading != blank -%}
      <h2 class="section-title heading-font">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}

    <div class="product-grid">
      {%- for block in section.blocks -%}
        {%- assign product = all_products[block.settings.selected_product] -%}
        <div class="product-item">
          {%- if product != blank -%}
            <img
              src="{{ product.featured_image | img_url: '800x800', crop: 'center' }}"
              alt="{{ product.title | escape }}"
              loading="lazy">
            <div
              class="plus-btn"
              style="--desktop-top: {{ block.settings.pos_y }}px; --desktop-left: {{ block.settings.pos_x }}px; --mobile-top: {{ block.settings.pos_y_mobile }}%; --mobile-left: {{ block.settings.pos_x_mobile }}%;"
              onclick="openQuickView('{{ product.handle }}')">
              <svg
                width="22"
                height="22"
                viewBox="0 0 22 22"
                fill="none">
                <circle
                  cx="11"
                  cy="11"
                  r="11"
                  fill="#F8F8F8"
                  fill-opacity="0.9" />
                <path
                  d="M11.3457 7.04175V15.5033"
                  stroke="black"
                  stroke-width="1.5"
                  stroke-linecap="square" />
                <path
                  d="M7.11523 11.2725H15.5768"
                  stroke="black"
                  stroke-width="1.5"
                  stroke-linecap="square" />
              </svg>
            </div>
          {%- else -%}
            <div class="empty-box"></div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>

  <div
    id="quickview-modal"
    class="modal-overlay"
    onclick="closeModal(event)">
    <div class="modal-box" onclick="event.stopPropagation()">
      <button onclick="closeModal()" class="close-btn">
        <svg
          width="14"
          height="14"
          viewBox="0 0 14 14"
          fill="none">
          <path
            d="M13 1L1 13M1 1L13 13"
            stroke="black"
            stroke-width="1.2"
            stroke-linecap="round" />
        </svg>
      </button>
      <div class="modal-content">
        <img
          id="modal-img"
          src=""
          alt="Product"
          class="modal-image">
        <h3 id="modal-name" class="modal-title body-font"></h3>
        <p id="modal-cost" class="modal-price heading-font"></p>
        <div id="modal-desc" class="modal-description body-font"></div>

        <div class="options-box">
          <p class="option-label">Color</p>
          <div class="color-options" id="color-selector"></div>

          <p class="option-label" style="margin-top: 24px;">Size</p>
          <div class="size-dropdown" onclick="toggleSizeList(event)">
            <span class="selected-size" id="current-size">Choose your size</span>
            <div class="divider"></div>
            <div class="dropdown-arrow">
              <svg
                width="15"
                height="9"
                viewBox="0 0 15 9"
                fill="none">
                <path
                  d="M1.06067 1.06067L7.06067 7.06067L13.0607 1.06067"
                  stroke="black"
                  stroke-width="1.5"
                  stroke-linecap="square" />
              </svg>
            </div>
            <div class="size-list" id="size-list"></div>
          </div>
        </div>

        <button class="cart-btn" onclick="addToCart()">
          <p class="body-font">ADD TO CART</p>
