<script>
  /**
   * VORSO QUICK VIEW STATE
   */
  const vorsoState = {
    selectedVariantId: null,
    productVariants: [],
    currentSelectedColor: null,
    currentSelectedSize: null,
    isAdding: false,
    currencyCode: '{{ shop.currency }}' || 'CAD'
  };
  
  /**
   * Format currency
   */
  function formatVorsoCurrency(cents) {
    const amount = (cents / 100).toFixed(2);
    return `${amount} ${vorsoState.currencyCode}`;
  }
  
  /**
   * OPEN QUICK VIEW MODAL
   */
  async function openVorsoQuickView(handle) {
    const overlay = document.getElementById('vorso-quickview-overlay');
    const elements = { 
      title: document.getElementById('vorso-modal-title'), 
      description: document.getElementById('vorso-modal-description'),  
      colors: document.getElementById('vorso-color-options'),
      sizes: document.getElementById('vorso-size-options'),
      price: document.getElementById('vorso-modal-price'),
      image: document.getElementById('vorso-modal-image'),
      sizeText: document.getElementById('vorso-selected-size'),
      addToCartBtn: document.querySelector('.vorso-add-to-cart')
    };
  
    // Show modal
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
    
    // Reset state
    vorsoState.selectedVariantId = null;
    vorsoState.currentSelectedColor = null;
    vorsoState.currentSelectedSize = null;
    
    // Set loading state
    elements.title.innerText = 'Loading...';
    elements.description.innerHTML = 'Fetching details...';
    elements.colors.innerHTML = '';
    elements.sizes.innerHTML = '';
    elements.sizeText.innerText = 'Choose your size';
    
    if(elements.addToCartBtn) {
      elements.addToCartBtn.innerText = "ADD TO CART";
      elements.addToCartBtn.disabled = false;
      elements.addToCartBtn.classList.remove('loading');
    }
  
    try {
      // Fetch product data
      const response = await fetch(`/products/${handle}.js`);
      const product = await response.json();
      
      // Update state
      vorsoState.productVariants = product.variants;
      
      // Update UI
      elements.image.src = product.featured_image;
      elements.title.innerText = product.title;
      elements.description.innerHTML = product.description;
      elements.price.innerText = formatVorsoCurrency(product.price);
      
      // Generate color options
      const colorOption = product.options.find(option => 
        option.name.toLowerCase().includes('color') || 
        option.name.toLowerCase().includes('colour')
      );
      
      if (colorOption) {
        elements.colors.innerHTML = colorOption.values.map(value => `
          <div class="vorso-color-box" onclick="selectVorsoColor('${value}', this)">
            <div class="vorso-color-indicator" style="background: ${value.toLowerCase()}; display: block;"></div>
            <span class="vorso-color-text">${value}</span>
          </div>`).join('');
      }
      
      // Generate size options
      const sizeOption = product.options.find(option => 
        option.name.toLowerCase() === 'size'
      );
      
      if (sizeOption) {
        elements.sizes.innerHTML = sizeOption.values.map(value => `
          <div class="vorso-size-option" onclick="selectVorsoSize('${value}', event)">${value}</div>`).join('');
      }
      
    } catch (error) {
      console.error("Vorso QuickView Error:", error);
      elements.title.innerText = "Error loading product";
    }
  }
  
  /**
   * SELECT COLOR
   */
  function selectVorsoColor(value, element) {
    vorsoState.currentSelectedColor = value;
    
    // Update UI
    document.querySelectorAll('.vorso-color-box').forEach(el => {
      el.classList.remove('selected');
    });
    element.classList.add('selected');
    
    // Find matching variant
    findVorsoVariant();
  }
  
  /**
   * SELECT SIZE
   */
  function selectVorsoSize(value, event) {
    event.stopPropagation();
    vorsoState.currentSelectedSize = value;
    
    // Update UI
    document.getElementById('vorso-selected-size').innerText = value;
    document.querySelector('.vorso-size-dropdown').classList.remove('active');
    
    // Find matching variant
    findVorsoVariant();
  }
  
  /**
   * TOGGLE SIZE DROPDOWN
   */
  function toggleVorsoSizeDropdown(event) {
    event.stopPropagation();
    document.querySelector('.vorso-size-dropdown').classList.toggle('active');
  }
  
  /**
   * FIND MATCHING VARIANT
   */
  function findVorsoVariant() {
    const { currentSelectedColor: color, currentSelectedSize: size, productVariants } = vorsoState;
    const addToCartBtn = document.querySelector('.vorso-add-to-cart');
    const priceEl = document.getElementById('vorso-modal-price');
    
    // Find variant that matches selected options
    const match = productVariants.find(variant => {
      const variantOptions = variant.options.map(opt => opt?.toString().toLowerCase());
      const selectedColor = color?.toLowerCase();
      const selectedSize = size?.toLowerCase();
      
      const matchesColor = !color || variantOptions.includes(selectedColor);
      const matchesSize = !size || variantOptions.includes(selectedSize);
      
      return matchesColor && matchesSize;
    });
    
    if (match) {
      vorsoState.selectedVariantId = match.id;
      priceEl.innerText = formatVorsoCurrency(match.price);
      
      // Update button based on availability
      if (match.available) {
        addToCartBtn.innerText = "ADD TO CART";
        addToCartBtn.disabled = false;
        addToCartBtn.classList.remove('loading');
      } else {
        addToCartBtn.innerText = "OUT OF STOCK";
        addToCartBtn.disabled = true;
      }
    } else {
      vorsoState.selectedVariantId = null;
      addToCartBtn.innerText = "UNAVAILABLE";
      addToCartBtn.disabled = true;
    }
  }
  
  /**
   * ADD TO CART
   */
  async function addToVorsoCart() {
    const { selectedVariantId, isAdding } = vorsoState;
    const addToCartBtn = document.querySelector('.vorso-add-to-cart');
    
    // Prevent multiple clicks
    if (isAdding) return;
    
    // Validate selection
    if (!vorsoState.currentSelectedColor || !vorsoState.currentSelectedSize) {
      alert("Please select both color and size!");
      return;
    }
    
    if (!selectedVariantId) {
      alert("Selected combination is not available!");
      return;
    }
    
    // Set loading state
    vorsoState.isAdding = true;
    addToCartBtn.classList.add('loading');
    addToCartBtn.disabled = true;
    addToCartBtn.innerHTML = '<p class="vorso-font-jost">ADDING...</p>';
    
    try {
      // Prepare cart data
      const itemsToAdd = [{ 
        id: selectedVariantId, 
        quantity: 1 
      }];
      
      // Add upsell product for specific combination
      if (vorsoState.currentSelectedColor.toLowerCase() === 'black' && 
          ['m', 'medium'].includes(vorsoState.currentSelectedSize.toLowerCase())) {
        try {
          const upsellResponse = await fetch('/products/dark-winter-jacket.js');
          const upsellProduct = await upsellResponse.json();
          
          if (upsellProduct.variants && upsellProduct.variants.length > 0) {
            itemsToAdd.push({ 
              id: upsellProduct.variants[0].id, 
              quantity: 1 
            });
          }
        } catch (error) {
          console.warn("Could not load upsell product:", error);
        }
      }
      
      // Add to cart
      const cartResponse = await fetch('/cart/add.js', {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json' 
        },
        body: JSON.stringify({ 
          items: itemsToAdd 
        })
      });
      
      if (cartResponse.ok) {
        // Redirect to cart page
        window.location.href = '/cart';
      } else {
        throw new Error('Failed to add to cart');
      }
      
    } catch (error) {
      console.error("Cart Error:", error);
      alert("Failed to add item to cart. Please try again.");
      
      // Reset button state
      addToCartBtn.classList.remove('loading');
      addToCartBtn.disabled = false;
      addToCartBtn.innerHTML = `
        <p class="vorso-font-jost">ADD TO CART</p>
        <svg width="36" height="12" viewBox="0 0 36 12" fill="none">
          <path d="M0.75 4.77295L0 4.77295L0 6.27295L0.75 6.27295L0.75 4.77295ZM34.9798 6.05328C35.2727 5.76039 35.2727 5.28551 34.9798 4.99262L30.2068 0.21965C29.9139 -0.0732432 29.4391 -0.0732433 29.1462 0.21965C28.8533 0.512544 28.8533 0.987417 29.1462 1.28031L33.3888 5.52295L29.1462 9.76559C28.8533 10.0585 28.8533 10.5334 29.1462 10.8263C29.4391 11.1191 29.9139 11.1191 30.2068 10.8263L34.9798 6.05328ZM0.75 6.27295L34.4495 6.27295L34.4495 4.77295L0.75 4.77295L0.75 6.27295Z" fill="white" />
        </svg>
      `;
      
    } finally {
      vorsoState.isAdding = false;
    }
  }
  
  /**
   * CLOSE QUICK VIEW
   */
  function closeVorsoQuickView(event) {
    // Only close if clicking on overlay (not modal content)
    if (event && event.target.id !== 'vorso-quickview-overlay') {
      return;
    }
    
    document.getElementById('vorso-quickview-overlay').classList.remove('active');
    document.body.style.overflow = 'auto';
  }
  
  /**
   * CLOSE MODAL WITH ESC KEY
   */
  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeVorsoQuickView();
    }
  });
  
  /**
   * CLOSE DROPDOWN WHEN CLICKING OUTSIDE
   */
  document.addEventListener('click', (event) => {
    const dropdown = document.querySelector('.vorso-size-dropdown');
    if (dropdown && !event.target.closest('.vorso-size-dropdown')) {
      dropdown.classList.remove('active');
    }
  });
</script>

