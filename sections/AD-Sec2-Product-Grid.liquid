          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  let selectedVariantId = null;          
  let productVariants = [];             
  let selectedColor = null;             
  let selectedSize = null;             
  let isAddingToCart = false;           
  const currency = '{{ shop.currency }}' || 'CAD'; 
  
  
  function formatPrice(cents) {
  const amount = (cents / 100).toFixed(2);
  return `${amount} ${currency}`;
  }
  
  // Open quick view modal when plus button is clicked
  async function openQuickView(handle) {
  // Get references to all modal elements
  const modal = document.getElementById('quickview-modal');
  const title = document.getElementById('modal-name');
  const desc = document.getElementById('modal-desc');
  const colors = document.getElementById('color-selector');
  const sizes = document.getElementById('size-list');
  const price = document.getElementById('modal-cost');
  const image = document.getElementById('modal-img');
  const sizeText = document.getElementById('current-size');
  const cartBtn = document.querySelector('.cart-btn');
  
  // Show modal and disable page scrolling
  modal.classList.add('show');
  document.body.style.overflow = 'hidden';
  
  // Reset previous selections
  selectedVariantId = null;
  selectedColor = null;
  selectedSize = null;
  
  // Show loading state
  title.innerText = 'Loading...';
  desc.innerHTML = 'Fetching details...';
  colors.innerHTML = '';
  sizes.innerHTML = '';
  sizeText.innerText = 'Choose your size';
  
  // Reset cart button state
  if(cartBtn) {
    cartBtn.disabled = false;
    cartBtn.classList.remove('loading');
  }
  
  try {
    // Fetch product data from Shopify
    const response = await fetch(`/products/${handle}.js`);
    const product = await response.json();
    
    // Store all variants for later use
    productVariants = product.variants;
    
    // Update modal with product information
    image.src = product.featured_image;
    title.innerText = product.title;
    desc.innerHTML = product.description;
    price.innerText = formatPrice(product.price);
    
    // Find and create color options
    const colorOption = product.options.find(option => 
      option.name.toLowerCase().includes('color') || 
      option.name.toLowerCase().includes('colour')
    );
    
    if (colorOption) {
      // Create a color box for each color option
      colors.innerHTML = colorOption.values.map(value => `
        <div class="color-box" onclick="chooseColor('${value}', this)">
          <div class="color-swatch" style="background: ${value.toLowerCase()}; display: block;"></div>
          <span class="color-name">${value}</span>
        </div>`).join('');
    }
    
    // Find and create size options
    const sizeOption = product.options.find(option => 
      option.name.toLowerCase() === 'size'
    );
    
    if (sizeOption) {
      // Create a size option for each size
      sizes.innerHTML = sizeOption.values.map(value => `
        <div class="size-option" onclick="chooseSize('${value}', event)">${value}</div>`).join('');
    }
    
  } catch (error) {
    // Handle errors if product can't be loaded
    console.error("Error loading product:", error);
    title.innerText = "Error loading product";
  }
  }
  
  // Handle color selection from color options
  function chooseColor(value, element) {
  // Store selected color
  selectedColor = value;
  
  // Remove active class from all color boxes
  document.querySelectorAll('.color-box').forEach(el => {
    el.classList.remove('active');
  });
  
  // Add active class to selected color box
  element.classList.add('active');
  
   
  findVariant();
  }
  
  // Handle size selection from dropdown
  function chooseSize(value, event) {
  // Prevent event from closing dropdown immediately
  event.stopPropagation();
  
  
  selectedSize = value;
  
  // Update displayed size text
  document.getElementById('current-size').innerText = value;
  
   
  document.querySelector('.size-dropdown').classList.remove('open');
  
   
  findVariant();
  }
  
  // Toggle size dropdown open/close
  function toggleSizeList(event) {
  
  event.stopPropagation();
  document.querySelector('.size-dropdown').classList.toggle('open');
  }
  
   
  function findVariant() {
  const cartBtn = document.querySelector('.cart-btn');
  const priceEl = document.getElementById('modal-cost');
  
  // Look for variant that matches both selected color and size
  const matchedVariant = productVariants.find(variant => {
    // Convert variant options to lowercase for comparison
    const variantOptions = variant.options.map(opt => opt?.toString().toLowerCase());
    const colorLower = selectedColor?.toLowerCase();
    const sizeLower = selectedSize?.toLowerCase();
    
    
    const colorMatch = !selectedColor || variantOptions.includes(colorLower);
    
    
    const sizeMatch = !selectedSize || variantOptions.includes(sizeLower);
    
   
    return colorMatch && sizeMatch;
  });
  
  if (matchedVariant) {
    // If matching variant found
    selectedVariantId = matchedVariant.id;
    priceEl.innerText = formatPrice(matchedVariant.price);
    
   
    if (matchedVariant.available) {
      cartBtn.disabled = false;
      cartBtn.classList.remove('loading');
    } else {
      cartBtn.disabled = true;
    }
  } else {
  
    selectedVariantId = null;
    cartBtn.disabled = true;
  }
  }
  
  // Add selected item to cart
  async function addToCart() {
  const cartBtn = document.querySelector('.cart-btn');
  
  if (isAddingToCart) return;
  
  if (!selectedColor || !selectedSize) {
    alert("Please select both color and size!");
    return;
  }
  
  if (!selectedVariantId) {
    alert("Selected combination is not available!");
    return;
  }
  
  isAddingToCart = true;
  cartBtn.classList.add('loading');
  cartBtn.disabled = true;
  cartBtn.innerHTML = '<p class="body-font">ADDING...</p>';
  
  try {
    // Prepare items to add to cart
    const cartItems = [{ 
      id: selectedVariantId, 
      quantity: 1 
    }];
    
    // Special offer: Add upsell product for black medium size
    if (selectedColor.toLowerCase() === 'black' && 
        ['m', 'medium'].includes(selectedSize.toLowerCase())) {
      try {
        // Try to get upsell product
        const upsellResponse = await fetch('/products/dark-winter-jacket.js');
        const upsellProduct = await upsellResponse.json();
        
       
        if (upsellProduct.variants && upsellProduct.variants.length > 0) {
          cartItems.push({ 
            id: upsellProduct.variants[0].id, 
            quantity: 1 
          });
        }
      } catch (error) {
       
        console.warn("Upsell product not found:", error);
      }
    }
    
    // Send request to add items to cart
    const cartResponse = await fetch('/cart/add.js', {
      method: 'POST',
      headers: { 
        'Content-Type': 'application/json' 
      },
      body: JSON.stringify({ 
        items: cartItems 
      })
    });
    
    
    if (cartResponse.ok) {
      window.location.href = '/cart';
    } else {
      throw new Error('Failed to add items to cart');
    }
    
  } catch (error) {
    // Handle errors during cart addition
    console.error("Cart Error:", error);
    alert("Failed to add item to cart. Please try again.");
    
    // Reset button state
    cartBtn.classList.remove('loading');
    cartBtn.disabled = false;
    cartBtn.innerHTML = `
      <p class="body-font">ADD TO CART</p>
      <svg width="36" height="12" viewBox="0 0 36 12" fill="none">
        <path d="M0.75 4.77295L0 4.77295L0 6.27295L0.75 6.27295L0.75 4.77295ZM34.9798 6.05328C35.2727 5.76039 35.2727 5.28551 34.9798 4.99262L30.2068 0.21965C29.9139 -0.0732432 29.4391 -0.0732433 29.1462 0.21965C28.8533 0.512544 28.8533 0.987417 29.1462 1.28031L33.3888 5.52295L29.1462 9.76559C28.8533 10.0585 28.8533 10.5334 29.1462 10.8263C29.4391 11.1191 29.9139 11.1191 30.2068 10.8263L34.9798 6.05328ZM0.75 6.27295L34.4495 6.27295L34.4495 4.77295L0.75 4.77295L0.75 6.27295Z" fill="white" />
      </svg>
    `;
    
  } finally {
   
    isAddingToCart = false;
  }
  }
  
  // Close modal when clicking outside or on close button
  function closeModal(event) {
  
  if (event && event.target.id !== 'quickview-modal') {
    return;
  }
  
  document.getElementById('quickview-modal').classList.remove('show');
  document.body.style.overflow = 'auto';
  }
  
  // Close modal with Escape key
  document.addEventListener('keydown', (event) => {
  if (event.key === 'Escape') {
    closeModal();
  }
  });
  
  // Close dropdown when clicking outside
  document.addEventListener('click', (event) => {
  const dropdown = document.querySelector('.size-dropdown');
  if (dropdown && !event.target.closest('.size-dropdown')) {
    dropdown.classList.remove('open');
  }
  });
</script>

