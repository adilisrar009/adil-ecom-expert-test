    margin-bottom: 20px;
    color: #000000;
  }

  .hero-description {
    font-size: 17px;
    line-height: 1.6;
    font-family: 'Jost'
    , sans-serif;
    margin-bottom: 30px;
    color: #333333;
    max-width: 440px;
  }

  /* Hide mobile layout on desktop/tablet */
  .hero-mobile {
    display: none;
  }

  /* Mobile Layout */
  @media screen and (max-width: 768px) {
    /* Navbar Mobile Styles */
    .navbar-desktop {
      display: none;
    }

    .navbar-mobile {
      display: block;
    }

    /* Hero Banner Mobile Styles */
    .hero-desktop {
      display: none;
    }

    /* Show mobile layout */
    .hero-mobile {
      display: block;
    }

    .mobile-heading {
      font-size: 36px;
      margin-bottom: 20px;
      text-align: center;
      color: #000000;
      padding: 20px 20px 0;
    }

    .mobile-description {
      font-size: 16px;
      line-height: 1.5;
      margin: 0 auto;
      text-align: center;
      color: #333333;
      padding: 0 20px;
    }

    .mobile-image-container {
      height: 264px;
      width: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      border-radius: 8px;
      position: relative;
      margin-top: 20px;
    }

    .mobile-hero-button {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      min-width: 193px;
      text-align: center;
    }

    /* Hide desktop description on mobile */
    .desktop-description {
      display: none;
    }

    /* Bottom Bar Mobile Styles */
    .bottom-bar {
      padding: 10px 20px;
    }

    /* Switch text display on mobile */
    .bottom-bar-desktop {
      display: none;
    }

    .bottom-bar-mobile {
      display: block;
    }
  }

  /* Tablet Styles */
  @media screen and (min-width: 769px) and(max-width: 1024px) {
    .navbar-desktop {
      display: block;
    }

    .navbar-mobile {
      display: none;
    }

    .hero-content {
      left: 3%;
      bottom: 5%;
      max-width: 400px;
    }

    .hero-heading {
      font-size: 36px;
    }

    .hero-description {
      font-size: 16px;
    }

    /* Hide mobile description on tablet */
    .mobile-description {
      display: none;
    }

    /* Adjust bottom bar padding for tablet */
    .bottom-bar {
      padding: 10px 30px;
    }
  }

  /* Desktop Styles */
  @media screen and (min-width: 1025px) {
    .navbar-desktop {
      display: block;
    }

    .navbar-mobile {
      display: none;
    }

    .hero-content {
