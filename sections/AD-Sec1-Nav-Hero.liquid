  }

  .hero-shop-button:hover .hero-shop-button-content {
    color: black;
  }

  .hero-shop-button svg path {
    fill: white;
    transition: fill 0.3s ease;
  }

  .hero-shop-button:hover svg path {
    fill: black;

  }

  .hero-shop-button-text {
    font-family: 'Jost'
    , sans-serif;
    font-size: 16px;
    text-transform: uppercase;
  }

  .ad-hero-wrapper {
